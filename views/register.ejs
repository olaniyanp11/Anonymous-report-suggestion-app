<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gray-900">
  <div class="w-full max-w-sm p-8 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-semibold text-center mb-6 text-gray-500">Sign Up</h2>

    <% if (error) { %>
      <div class="bg-red-100 text-red-700 p-2 rounded mb-4 text-sm text-center">
        <%= error %>
      </div>
    <% } %>

    <form action="/register" method="POST" class="space-y-4" id="signupForm">
      <div>
        <label class="block mb-1 font-medium text-gray-500">Full Name</label>
        <input 
          type="text" 
          name="name" 
          required 
          class="w-full px-4 py-2 border rounded  text-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-600" />
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-500">Email</label>
        <input 
          type="email" 
          name="email" 
          required 
          class="w-full px-4 py-2 border  text-gray-500 rounded focus:outline-none focus:ring-2 focus:ring-gray-600" />
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-500">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border  text-gray-500 rounded focus:outline-none focus:ring-2 focus:ring-gray-600" />
      </div>

      <button 
        type="submit" 
        class="w-full bg-gray-600 text-white py-2 rounded hover:bg-gray-700 transition"
        id="submitBtn">
        Register
      </button>
    </form>
  <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-greering-gray-600 border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>
    <p class="text-sm text-center text-gray-500 mt-4">
      Already have an account? 
      <a href="/login" class="text-gray-600 hover:underline">Login</a>
    </p>
  </div>
</div>

<!-- loading script -->
<script>
  const form = document.getElementById('signupForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Signing Up...';
  });
</script>

<%- include('partials/footer') %>
